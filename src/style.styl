html
  height 100%
body
  margin 0
  height 100%
  display flex
  flex-flow column
  align-items center
  background-color #111822
  overflow hidden
#field
  width 100%
  height 90%
  display flex
  flex-wrap wrap
  box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
.menu
  height 10%
  width 500px
  max-width 100%
  background-color #1E1E1E
  border-radius 5px
  display flex
  justify-content center
  align-items center
  button
    border 1px solid white
    background-color #1E1E1E
    color white
    width 50px
    height 50px
    box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
    border-radius 25%
    &:focus
      outline 0
    &:enabled
      &:hover
        border 2px solid white
        box-shadow none
    &:disabled
      background-color gray
  #play-pause
    background-color #479DC8
.speed-dropdown
  position relative
  display inline-block
.speed-menu
  display none
  position absolute
  top -100px
  z-index 1
.speed-dropdown:hover .speed-menu
  display block
