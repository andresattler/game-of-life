html
  height 100%
body
  margin 0
  height 100%
  display flex
  flex-flow column
  align-items center
  background-color #111822
  overflow hidden
button
  width 50px
  height 50px
  border 1px solid white
  background-color #1E1E1E
  color white
  box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
  border-radius 25%
  &:focus
    outline 0
  &:hover
    border 2px solid white
    box-shadow none
#field
  width 100%
  height 90%
  display flex
  flex-wrap wrap
  box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
.menu
  height 10%
  width 500px
  max-width 100%
  background-color #1E1E1E
  border-radius 5px
  display flex
  justify-content center
  align-items center
  #play-pause
    background-color #479DC8
.speed-dropdown
  position relative
  display inline-block
.speed-menu
  display none
  position absolute
  top -100px
  z-index 1
.speed-dropdown:hover .speed-menu
  display block
.modal
  position absolute
  width 100%
  min-width 480px
  height 90%
  border-radius .5%
  box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
#modal-add
  display none
  color white
  justify-content center
  &.visible
    display flex
  #name-list
    background-color #242424
    width 50%
    height 100%
    overflow-y scroll
    .name
      padding: 20px 0
      width 100%
      text-align center
      border-bottom: 1px solid
      cursor pointer
      &:hover
        font-weight bold
