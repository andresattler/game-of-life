body
  margin 0
  display flex
  flex-flow column
  align-items center
#field
  width 100vw
  display flex
  flex-wrap wrap
.cell
  box-sizing: border-box;
  background-color #2B2B2B
  display flex
  justify-content center
  align-items center
  color white
  cursor default
.active
  background-color #F7F7F7
  box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
.play-pause-btn
  border none
  background-color #479DC8
  color white
  width 50px
  height 50px
  box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
  border-radius 25%
  &:hover
    box-shadow none
.menu
  width 500px
  background-color #1E1E1E
  border-radius 5px
  margin-left auto
  margin-right auto
  padding 1vw
  text-align center
