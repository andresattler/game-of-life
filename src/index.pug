doctype html
html(lang="en")
  head
    title game of life
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=0")
    link(rel="icon" type="image/png" size="72x72" href="./images/icons/icon-72x72.png") 
    //- pwa part
    link(rel="manifest" href="manifest.json")
    meta(name="mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="application-name" content="Game of Life")
    meta(name="apple-mobile-web-app-title" content="Game of Life")
    meta(name="theme-color" content="#111822")
    meta(name="msapplication-navbutton-color" content="#111822")
    meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
    meta(name="msapplication-starturl" content="/")
  body
    canvas#field
    .menu
      button#config Config 
      .speed-dropdown
        button Speed
        .speed-menu
          button#speed-down -
          button#speed-up +
      button#random Random
      button#play-pause Play
      button#next Next
      button#clear Clear
      button#add Add
